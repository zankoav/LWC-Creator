{
    "name": "lwc-creator",
    "displayName": "LWC Creator",
    "description": "Create Lightning Web Component with SCSS file",
    "version": "1.5.2",
    "publisher": "AlexandrZanko",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.41.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/zankoav/LWC-Creator.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.createlwc"
    ],
    "main": "./extension.js",
    "contributes": {
        "configuration": {
            "title": "LWC Creator",
            "properties": {
                "lwc-creator.defaultComponentsFolder": {
                    "type": "string",
                    "default": "frontend/components",
                    "description": "Select the folder to create the component in."
                },
                "lwc-creator.defaultStyleFormat": {
                    "type": "string",
                    "default": "css",
                    "enum": [
                        "css",
                        "scss",
                        "sass",
                        "less"
                    ],
                    "enumDescriptions": [
                        "Use style format what you wish"
                    ]
                }
            }
        },
        "commands": [
            {
                "command": "extension.createlwc",
                "title": "LWC Create Component",
                "key": "ctrl+shift+p",
                "mac": "cmd+shift+p"
            },
            {
                "command": "extension.createlwcutils",
                "title": "LWC Create Module",
                "key": "ctrl+shift+p",
                "mac": "cmd+shift+p"
            }
        ]
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.41.0",
        "eslint": "^6.6.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    }
}